/* 头部图片 */
.tailored-head image.cover {
  width: 100%;
  height: 375rpx;
  filter: blur(4px);
}

.tailored-head .tailored-head-title {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  /* border-bottom: 1px solid #fff; */
  z-index: 2;
  left: 60rpx;
  top: 120rpx;
}

.tailored-head .tailored-head-title text {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

/* 文章块 */
.article-container {
  margin-top: 15px;
  background-color: #fff;
}

.article-container .loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

/* 文章页脚 */
.article-footer {
  font-size: 26rpx;
  line-height: 1.6;
  font-weight: 400;
  text-align: center;
  color: #c4c4c4;
  margin-top: 48rpx;
  padding-bottom: 80rpx;
}

.detailhead {
  font-size: 48rpx;
  line-height: 1.6;
  font-weight: bold;
  outline: none;
  color: #3a4040;
  border-bottom: 1px solid #eee;
  margin: 40rpx 40rpx 0 40rpx;
}

.likeBlock {
  display: flex;
  flex-direction: column;
  margin: 10rpx 40rpx 0 40rpx;
  height: 200rpx;
}

.likeBlock .likeUp {
  height: 50rpx;
  display: flex;
}

.likeBlock .likeUp .likeTitle {
  flex: 1;
  text-align: left;
  font-weight: normal;
  font-size: 28rpx;
  color: #959595;
  vertical-align: middle;
}

.likeBlock .likeUp .img-like {
  width: 50rpx;
  height: 50rpx;
}

.likeBlock .likeDown {
  display: flex;
  flex: 1;
  background-color: green;
}

.likeBlock .likeDown .gravatarLikeImg {
  margin-top: 4px;
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
}

.comment-top {
  text-align: left;
  font-weight: normal;
  line-height: 40rpx;
  margin: 10rpx 40rpx 0 40rpx;
  font-size: 32rpx;
  color: #4c4c4c;  
}

.comment-content {
  margin: 10rpx 40rpx 0 40rpx;
}

.comment-content .commentUp {
  text-align: left;
  font-weight: normal;
  font-size: 28rpx;
  color: #959595;  
}

.comment-list .list-item {
  background-color: #f5f7f7;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  margin: 24rpx;
  height: 200rpx;  
}

.comment-list .list-item .list-item-up {
  display: flex;
  height: 50rpx;
}

.comment-list .list-item .list-item-up .img-commenter {
  padding-left: 16rpx;
  padding-right: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.comment-list .list-item .list-item-up .name-commenter {
  flex: 1;
  text-align: left;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #959595;  
}

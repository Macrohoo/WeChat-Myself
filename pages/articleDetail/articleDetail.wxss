.detailhead {
  font-size: 48rpx;
  line-height: 1.6;
  font-weight: bold;
  outline: none;
  color: #3a4040;
  border-bottom: 1px solid #eee;
  margin: 40rpx 40rpx 0 40rpx;
}

.likeBlock {
  display: flex;
  flex-direction: column;
  margin: 10rpx 40rpx 0 40rpx;
  height: 200rpx;
}

.likeBlock .likeUp {
  height: 50rpx;
  display: flex;
}

.likeBlock .likeUp .likeTitle {
  flex: 1;
  text-align: left;
  font-weight: normal;
  font-size: 28rpx;
  color: #959595;
  vertical-align: middle;
}

.likeBlock .likeUp .img-like {
  width: 50rpx;
  height: 50rpx;
}

.likeBlock .likeDown {
  display: flex;
  flex: 1;
  background-color: green;
}

.likeBlock .likeDown .gravatarLikeImg {
  margin-top: 4px;
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
}

.comment-top {
  text-align: left;
  font-weight: normal;
  line-height: 40rpx;
  margin: 10rpx 40rpx 0 40rpx;
  font-size: 32rpx;
  color: #4c4c4c;  
}

.comment-content {
  margin: 10rpx 40rpx 0 40rpx;
}

.comment-content .commentUp {
  text-align: left;
  font-weight: normal;
  font-size: 28rpx;
  color: #959595;  
}

.comment-list .list-item {
  background-color: #f5f7f7;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  margin: 24rpx;
  min-height: 200rpx;
  /* 这个保证最小块高度是240rpx  */
}

.comment-list .list-item .list-item-up {
  padding-top: 10rpx;
  display: flex;
  height: 50rpx;
}

.comment-list .list-item .list-item-up .img-commenter {
  padding-left: 16rpx;
  padding-right: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.comment-list .list-item .list-item-up .name-commenter {
  flex: 1;
  text-align: left;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #959595;  
}

.comment-list .list-item .list-item-mid {
  /* height: 120rpx;    */
  flex: 1;
}

.comment-list .list-item .list-item-mid text {
  padding: 10rpx 60rpx 0rpx 60rpx;
  color: #4c4c4c;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1.2;
}


.comment-list .list-item .list-item-down {
  font-size: 28rpx;
  color: #959595;
  padding-left: 100rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.comment-list .list-item .list-item-more {
  padding: 10rpx 60rpx 0rpx 60rpx;
  display: flex;
  flex-direction: column;
  min-height: 160rpx; 
}

.comment-list .list-item .list-item-more .more-item-up {
  padding-top: 10rpx;
  display: flex;
  height: 50rpx;  
}

.comment-list .list-item .list-item-more .more-item-up .img-commenter {
  padding-left: 16rpx;
  padding-right: 30rpx;
  width: 50rpx;
  height: 50rpx;  
}

.comment-list .list-item .list-item-more .more-item-up .name-commenter {
  flex: 1;
  text-align: left;
  /* line-height: 50rpx; */
  font-size: 32rpx;
  color: #959595;
}

.comment-list .list-item .list-item-more .more-item-mid {
  flex: 1;
}

.comment-list .list-item .list-item-more .more-item-mid text {
  padding: 10rpx 60rpx 0rpx 60rpx;
  color: #4c4c4c;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1.2;  
}

.comment-list .list-item .more-item-down {
  font-size: 28rpx;
  color: #959595;
  padding-left: 100rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;  
}

.comment-list .list-item .more-item-hidden {
  font-size: 28rpx;
  color: #959595;
  padding-left: 100rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;   
}


.commentMore {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;  
}
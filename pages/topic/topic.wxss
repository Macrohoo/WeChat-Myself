.lost .lost-download {
  display: flex;
  flex-direction: column;
  height: 400rpx;
  align-items: center;
  justify-content: center;
}

.lost .lost-download image {
  flex: 1;
  width: 70%;
  border-radius: 10px;
}

.lost .lost-download text {
  padding: 10rpx 0rpx 10rpx 0rpx;
  color: #4c4c4c;
  font-size: 30rpx;
}

.lost .lost-download .lost-button {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.lost .lost-download .lost-button .black {
  pointer-events: none;
}

.lost .lost-use-text {
  font-weight: bold;
  color: #676767;
  font-size: 30rpx;
  padding: 0 30rpx 20rpx 30rpx;
}

<template name="login">
    <block wx:if="{{ !userInfo.isLogin }}">
        <view class="login-inner">
            <image class="avatar" src="../../images/cry80.png" />
        </view>
        <view class="username">
            <text >请点击登录</text>
        </view>
    </block>
    <block wx:else>
        <view class="login-inner">
            <image class="avatar" src="{{userInfo.avatarUrl}}" />
        </view>
        <view class="username">
            <text>{{userInfo.nickName}}</text>
        </view>        
    </block>
</template>
/**app.wxss**/

/* error */

.showerror {
  text-align: center;
  font-weight: normal;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #757575;
  margin-top: 100rpx;
}

.errortext {
  margin-top: 50rpx;
  table-layout: center;
}

/* 文章列表 */
.common-list .list-item {
  box-shadow: 2rpx 4rpx 40rpx #c2c2c2;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  margin: 24rpx;
  height: 550rpx;
  position: relative;
}

.common-list .list-item .cover {
  display: flex;
  width: calc(100% - 40rpx);
  flex: 1;
  margin: 20rpx;
  border-radius: 8px;
}

.common-list .list-item .content-title {
  text-shadow: 0 0 15px #3a4040;
  z-index: 2;
  display: inline-block;
  position: absolute;
  top: 270rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.common-list .list-item .content-desc text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.4;
  color: #969696;
  margin: 0 20rpx 20rpx 20rpx;
}

.common-list .list-item .content-label text {
  font-weight: bold;
  color: #676767;
  font-size: 30rpx;
  padding: 0 20rpx 20rpx 20rpx;
}

.common-list .list-item .content-bottom {
  padding: 0 20rpx 20rpx 20rpx;
}

.common-list .list-item .content-bottom image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.common-list .list-item .content-bottom text {
  color: #959595;
  padding-right: 32rpx;
  font-size: 20rpx;
  line-height: 1.2;
  font-weight: normal;
}
